<UserControl x:Class="OPG_Robin_Strandberg_SYSM9.Views.ForgotPasswordUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OPG_Robin_Strandberg_SYSM9.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <Label Content="CookMaster"
               FontSize="30"
               FontWeight="Bold"
               Foreground="#FF4A4A4A"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,30,0,20" />

        <TextBlock Text="Username" Margin="0,5" />
        <TextBox Text="{Binding }" Width="200" />
        <TextBlock Text="New Password" Margin="0,5" />
        <TextBox Text="{Binding }" Width="200" />
        <TextBlock Text="Confirm new password" Margin="0,5" />
        <TextBox Text="{Binding}" Width="200" />
        <Button Content="Submit" Margin="0,5" Background="SeaGreen" />

    </StackPanel>


</UserControl>
