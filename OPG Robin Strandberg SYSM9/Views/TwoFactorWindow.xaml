<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.TwoFactorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Two-Factor Verification"
        WindowStartupLocation="CenterScreen"
        Width="1000"
        Height="1000"
        Background="{StaticResource AppBackground}">

    <Grid>
        <!-- Viewbox för responsivitet på olika skärmstorlekar. Stretch down only för att enbart skala ned för små skärmas,
        ej skala upp så komponenter/knappar etc blir för stora vid större skärmar-->
        <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

                <StackPanel>

                    <Viewbox Width="200" Height="200" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <!-- Canvas-element (behållare) för barnobjekt (ellipse, rektanglar) som ges exakta koordinater (x, y) för att rita former. Likt SVG-värden. -->
                        <Canvas Width="150" Height="150">
                            <Ellipse Width="130" Height="130" Canvas.Left="10" Canvas.Top="10">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFFDF6EE" Offset="0" />
                                        <GradientStop Color="#FAEBD7" Offset="1" />
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#444" BlurRadius="10" ShadowDepth="3" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <Rectangle Width="90" Height="30" Canvas.Left="30" Canvas.Top="70"
                                       RadiusX="6" RadiusY="6">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#C0782F" Offset="0" />
                                        <GradientStop Color="#9B5510" Offset="1" />
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                                <Rectangle.Stroke>
                                    <SolidColorBrush Color="#2F2F2F" />
                                </Rectangle.Stroke>
                                <Rectangle.StrokeThickness>2</Rectangle.StrokeThickness>
                            </Rectangle>

                            <Rectangle Width="6" Height="16" Canvas.Left="24" Canvas.Top="75" Fill="#2F2F2F" />
                            <Rectangle Width="6" Height="16" Canvas.Left="120" Canvas.Top="75" Fill="#2F2F2F" />

                            <Rectangle Width="70" Height="10" Canvas.Left="40" Canvas.Top="58" RadiusX="2" RadiusY="2"
                                       Fill="#2F2F2F" />
                            <Ellipse Width="16" Height="8" Canvas.Left="67" Canvas.Top="50" Fill="#B5651D" />
                            <Path Stroke="#FF7F50" StrokeThickness="3" Fill="Transparent"
                                  Data="M75,50 C68,38 82,35 75,20" />
                        </Canvas>
                    </Viewbox>

                    <TextBlock Text="CookMaster"
                               Foreground="{StaticResource PrimaryTitle}"
                               FontSize="80"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40" />

                    <!-- Rundning av kanter i hörnegenskap för inramning -->
                    <!-- Border-element enbart ett barn tillåtet, därav en nästlad stackpanel -->

                    <Border CornerRadius="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Enter the 6-digit code sent to your email:"
                                       FontSize="16"
                                       TextAlignment="Center"
                                       Margin="0,0,0,20" />

                            <TextBox x:Name="CodeBox"
                                     FontSize="16"
                                     HorizontalContentAlignment="Center"
                                     MaxLength="6" />

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <Button Content="Verify"

                                        Click="Verify_Click" />
                                <Button Content="Cancel"

                                        Click="Cancel_Click" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
