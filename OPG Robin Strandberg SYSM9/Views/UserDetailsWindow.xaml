<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Width="1000"
        Height="1000"
        Title="User Details"
        Background="{StaticResource AppBackground}">

    <Grid Margin="16">

        <StackPanel>
            <TextBlock Text="CookMaster"
                       Foreground="{StaticResource PrimaryTitle}"
                       FontSize="80"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40" />

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="18rem">
                <TextBlock Text="Current Username:" FontWeight="Bold" />
                <TextBlock Text="{Binding CurrentUserName}" />

                <TextBlock Text="Current Country:" FontWeight="Bold" />
                <TextBlock Text="{Binding CurrentCountry}" />

                <Separator Margin="8 16" />

                <TextBlock Text="New Username:" />
                <TextBox Text="{Binding NewUserName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="New Password:" />
                <PasswordBox x:Name="PasswordBox1" PasswordChanged="PasswordBox1_PasswordChanged" />

                <TextBlock Text="Confirm Password:" />
                <PasswordBox x:Name="PasswordBox2" PasswordChanged="PasswordBox2_PasswordChanged" />

                <TextBlock Text="Select Country:" />
                <ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="8 0 0 0">
                    <Button Content="Save" Command="{Binding SaveCommand}" />
                    <Button Content="Cancel" Command="{Binding CancelCommand}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
