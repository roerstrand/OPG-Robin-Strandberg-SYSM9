<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="600"
        Title="Recipe List"
        Background="{StaticResource AppBackground}">

    <DockPanel Margin="16">

        <StackPanel>
            <TextBlock Text="CookMaster"
                       Foreground="{StaticResource PrimaryTitle}"
                       FontSize="80"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40" />

            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Top"
                        HorizontalAlignment="Right"
                        Margin="0 0 0 16">
                <Button Content="Add Recipe"
                        Command="{Binding AddRecipeCommand}"
                        Margin="0 8 8 0" />
                <Button Content="Recipe Details"
                        Command="{Binding DetailsCommand}"
                        Margin="0 8 8 0" />
                <Button Content="User Details"
                        Command="{Binding ShowUserDetailsCommand}"
                        Margin="0 8 8 0" />
                <Button Content="Log Out"
                        Command="{Binding SignOutCommand}" />
            </StackPanel>

            <ListView ItemsSource="{Binding Recipes}"
                      SelectedItem="{Binding SelectedRecipe, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" />
                        <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </DockPanel>
</Window>
