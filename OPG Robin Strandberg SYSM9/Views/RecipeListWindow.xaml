<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Width="1000"
        Height="1000"
        Title="Recipe List"
        Background="{StaticResource AppBackground}">

    <Window.Resources>
        <!-- Inbyggd konverterare i wpf för visning av View all recipes-knapp för admins -->
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- Viewbox för responsivitet på olika skärmstorlekar. Stretch down only för att enbart skala ned för små skärmas,
            ej skala upp så komponenter/knappar etc blir för stora vid större skärmar-->
            <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">

                    <StackPanel HorizontalAlignment="Center" MaxWidth="900">

                        <Viewbox Width="200" Height="200" HorizontalAlignment="Center" Margin="0,0,0,25">
                            <!-- Canvas-element (behållare) för barnobjekt (ellipse, rektanglar) som ges exakta koordinater (x, y) för att rita former. Likt SVG-värden. -->
                            <Canvas Width="150" Height="150">
                                <Ellipse Width="130" Height="130" Canvas.Left="10" Canvas.Top="10">
                                    <Ellipse.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FFFDF6EE" Offset="0" />
                                            <GradientStop Color="#FAEBD7" Offset="1" />
                                        </LinearGradientBrush>
                                    </Ellipse.Fill>
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#444" BlurRadius="10" ShadowDepth="3" />
                                    </Ellipse.Effect>
                                </Ellipse>

                                <Rectangle Width="90" Height="30" Canvas.Left="30" Canvas.Top="70"
                                           RadiusX="6" RadiusY="6">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#C0782F" Offset="0" />
                                            <GradientStop Color="#9B5510" Offset="1" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                    <Rectangle.Stroke>
                                        <SolidColorBrush Color="#2F2F2F" />
                                    </Rectangle.Stroke>
                                    <Rectangle.StrokeThickness>2</Rectangle.StrokeThickness>
                                </Rectangle>

                                <Rectangle Width="6" Height="16" Canvas.Left="24" Canvas.Top="75" Fill="#2F2F2F" />
                                <Rectangle Width="6" Height="16" Canvas.Left="120" Canvas.Top="75" Fill="#2F2F2F" />

                                <Rectangle Width="70" Height="10" Canvas.Left="40" Canvas.Top="58" RadiusX="2"
                                           RadiusY="2"
                                           Fill="#2F2F2F" />
                                <Ellipse Width="16" Height="8" Canvas.Left="67" Canvas.Top="50" Fill="#B5651D" />
                                <Path Stroke="#FF7F50" StrokeThickness="3" Fill="Transparent"
                                      Data="M75,50 C68,38 82,35 75,20" />
                            </Canvas>
                        </Viewbox>

                        <TextBlock Text="CookMaster"
                                   Foreground="{StaticResource PrimaryTitle}"
                                   FontSize="80"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20" />

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,25">
                            <TextBlock Text="Current User: " FontWeight="Bold" FontSize="16" Margin="0,0,5,0" />
                            <TextBlock Text="{Binding CurrentUserName}" FontSize="16" />
                            <TextBlock Text=" (Administrator)" FontWeight="Bold" Foreground="DarkRed" FontSize="16"
                                       Visibility="{Binding IsAdminVisible, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>

                        <Grid HorizontalAlignment="Center" Margin="0,0,0,40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Select Date:" FontWeight="Bold" HorizontalAlignment="Left"
                                           Margin="0,0,0,5" />
                                <DatePicker SelectedDate="{Binding SelectedDate}" Width="180" Height="35"
                                            VerticalAlignment="Bottom" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Select Category:" FontWeight="Bold" HorizontalAlignment="Left"
                                           Margin="0,0,0,5" />
                                <ComboBox ItemsSource="{Binding Categories}"
                                          SelectedItem="{Binding SelectedCategory}"
                                          Width="180" Height="35" />
                            </StackPanel>

                            <Button Grid.Column="4"
                                    Content="Filter"
                                    Command="{Binding FilterCommand}"
                                    Width="120"
                                    Height="35"
                                    VerticalAlignment="Bottom"
                                    Margin="0, -1"/>
                        </Grid>

                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,25">

                            <UniformGrid Rows="2" Columns="3" HorizontalAlignment="Center">
                                <Button Content="Add Recipe" Command="{Binding AddRecipeCommand}" />
                                <Button Content="Remove Recipe" Command="{Binding RemoveRecipeCommand}" />
                                <Button Content="Recipe Details" Command="{Binding RecipeDetailsCommand}" />

                                <Button Content="App Info" Command="{Binding InfoCommand}" />
                                <Button Content="User Details" Command="{Binding ShowUserDetailsCommand}" />
                                <Button Content="View All Recipes (admin only)"
                                        Command="{Binding ShowAllRecipesCommand}"
                                        Visibility="{Binding IsAdminVisible, Converter={StaticResource BoolToVis}}" />
                            </UniformGrid>

                            <Button Content="Log Out"
                                    Command="{Binding SignOutCommand}"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0" />
                        </StackPanel>

                        <ListView ItemsSource="{Binding Recipes}"
                                  SelectedItem="{Binding SelectedRecipe, Mode=TwoWay}"
                                  Margin="0,10,0,0"
                                  MinHeight="200"
                                  Height="Auto"
                                  MaxHeight="400"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="250" />
                                    <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}"
                                                    Width="250" />
                                    <GridViewColumn Header="Created"
                                                    DisplayMemberBinding="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                                    Width="250" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Grid>
            </Viewbox>
        </Grid>
    </ScrollViewer>
</Window>
