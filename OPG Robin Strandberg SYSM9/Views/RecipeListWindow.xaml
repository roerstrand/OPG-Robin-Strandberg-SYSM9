<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Width="1000"
        Height="1000"
        Title="Recipe List"
        Background="{StaticResource AppBackground}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <DockPanel Margin="40">
        <StackPanel HorizontalAlignment="Center" Width="900">

            <TextBlock Text="CookMaster"
                       Foreground="{StaticResource PrimaryTitle}"
                       FontSize="80"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,25">
                <TextBlock Text="Current User: "
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,5,0"/>
                <TextBlock Text="{Binding CurrentUserName}" FontSize="16" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,30">
                <TextBox Width="300"
                         Text="{Binding FilterText, Mode=TwoWay}" />
                <Button Content="Filter"
                        Command="{Binding FilterCommand}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10">
                <Button Content="Add Recipe"
                        Command="{Binding AddRecipeCommand}" />
                <Button Content="Remove Recipe"
                        Command="{Binding RemoveRecipeCommand}" />
                <Button Content="Recipe Details"
                        Command="{Binding RecipeDetailsCommand}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,25">
                <Button Content="App Info"
                        Command="{Binding InfoCommand}" />
                <Button Content="User Details"
                        Command="{Binding ShowUserDetailsCommand}" />
                <Button Content="Log Out"
                        Command="{Binding SignOutCommand}" />
                <Button Content="View All Recipes"
                        Command="{Binding ShowAllRecipesCommand}"
                        Visibility="{Binding IsAdminVisible, Converter={StaticResource BoolToVis}}" />
            </StackPanel>
            <ListView ItemsSource="{Binding Recipes}"
                      SelectedItem="{Binding SelectedRecipe, Mode=TwoWay}"
                      Margin="0,10,0,0"
                      Height="400">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="250" />
                        <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" Width="250" />
                        <GridViewColumn Header="Created" DisplayMemberBinding="{Binding CreatedDate}" Width="250" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </DockPanel>
</Window>
