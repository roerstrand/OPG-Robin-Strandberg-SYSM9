<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Robin_Strandberg_SYSM9"
        mc:Ignorable="d"
        Title="CookMaster"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="600"
        Background="{StaticResource AppBackground}">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

        <StackPanel>
            <TextBlock Text="CookMaster"
                       Foreground="{StaticResource PrimaryTitle}"
                       FontSize="80"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40" />

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="300"
                        Orientation="Vertical">

                <TextBlock Text="Username" Margin="0,0,0,5" />
                <TextBox Text="{Binding UserNameInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Password" Margin="0,0,0,5" />
                <PasswordBox x:Name="MainWindowPasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged" />

                <Button Content="Log In"
                        Command="{Binding LoginCommand}" />

                <Button Content="Register"
                        Command="{Binding ShowRegisterCommand}" />

                <Button Content="Forgot Password"
                        Command="{Binding ShowForgotPasswordCommand}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
