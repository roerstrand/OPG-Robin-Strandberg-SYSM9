<Window x:Class="OPG_Robin_Strandberg_SYSM9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Robin_Strandberg_SYSM9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="AntiqueWhite">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Content="CookMaster"
               FontSize="80"
               FontWeight="Bold"
               Foreground="#FF4A4A4A"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0,30,0,0" />

        <!-- Loginsektion som visar om nuvarande användare ej är autentiserad i user manager -->

        <Grid Grid.Row="1" x:Name="LoginSection">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static local:App.UserManager},
                        Path=IsAuthenticated}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock Text="Username Input" FontSize="13" FontWeight="Bold" Margin="0,5" Width="200" />
                <TextBox Text="{Binding UserNameInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Width="200" />
                <TextBlock Text="Password Input" FontSize="13" FontWeight="Bold" Margin="0,5" Width="200" />
                <PasswordBox x:Name="MainWindowPasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Margin="0,5" Width="200" />

                <Button Background="LightSlateGray" FontSize="14" Content="Log In" x:Name="LogInButton" Command="{Binding LoginCommand}" Width="200" Margin="0,5" />
                <Button Background="LightSlateGray" FontSize="14" Content="Register" x:Name="RegisterButton" Command="{Binding ShowRegisterCommand}" Width="200" Margin="0,5" />
                <Button Background="LightSlateGray" FontSize="14" Content="Forgot Password" x:Name="ForgotPwButton" Command="{Binding ForgotPasswordCommand}" Width="200" Margin="0,5" />

                </StackPanel>
        </Grid>

        <!-- Inbäddning av respektive User Control (fönster) i nedan MainContentSection baserat på om -->
        <!-- nuvarande användaren är autentiserad -->

        <Grid x:Name="MainContentSection" Grid.Row="1">

            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static local:App.UserManager},
                        Path=IsAuthenticated}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Background="LightSlateGray" FontSize="14" Content="Add Recipe" Width="120" Height="60" Margin="5" Command="{Binding ShowAddRecipeCommand}" />
                <Button Background="LightSlateGray" FontSize="14" Content="View Recipe Details" Width="120" Height="60" Margin="5" Command="{Binding ShowViewRecipeDetailsCommand}" />
                <Button Background="LightSlateGray" FontSize="14" Content="View Recipe List" Width="120" Height="60" Margin="5" Command="{Binding ShowViewRecipeListCommand}" />
                <Button Background="LightSlateGray" FontSize="14" Content="Log Out" Width="120" Height="60" Margin="5" Command="{Binding LogoutCommand}" />

                </StackPanel>

            <ContentControl Content="{Binding CurrentView}" x:Name="MainContentArea" Grid.Row="1" />

        </Grid>
    </Grid>
</Window>
