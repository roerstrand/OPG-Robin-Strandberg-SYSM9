<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Robin_Strandberg_SYSM9"
        xmlns:views="clr-namespace:OPG_Robin_Strandberg_SYSM9.Views"
        mc:Ignorable="d"
        Title="CookMaster"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource AppBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Content="CookMaster" />

        <!-- Loginsektion (visas när man inte är inloggad) -->
        <Grid Grid.Row="1" x:Name="LoginSection">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static local:App.UserManager}, Path=IsAuthenticated}"
                                     Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border Background="{StaticResource AppBackground}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock Text="Username Input" />
                    <TextBox Text="{Binding UserNameInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Text="Password Input" />
                    <PasswordBox x:Name="MainWindowPasswordBox"
                                 PasswordChanged="PasswordBox_PasswordChanged" />

                    <Button Content="Log In"
                            Command="{Binding LoginCommand}" />

                    <Button Content="Register"
                            Command="{Binding ShowRegisterCommand}" />

                    <Button Content="Forgot Password"
                            Command="{Binding ShowForgotPasswordCommand}" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Huvudinnehåll (visas när man är inloggad) -->
        <Grid Grid.Row="1" x:Name="MainContentSection">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static local:App.UserManager}, Path=IsAuthenticated}"
                                     Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <ContentControl Content="{Binding CurrentView}" />
        </Grid>


    </Grid>
</Window>
