<UserControl x:Class="OPG_Robin_Strandberg_SYSM9.Views.RecipeListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{StaticResource AppBackground}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Importera det globala temat -->
                <ResourceDictionary Source="/Themes/GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel Margin="16">
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    HorizontalAlignment="Right"
                    Margin="0 0 0 16">
            <Button Content="Add Recipe"
                    Command="{Binding AddRecipeCommand}"
                    Margin="0 8 0 0" />
            <Button Content="Log Out"
                    Command="{Binding SignOutCommand}"/>
        </StackPanel>

        <ListView ItemsSource="{Binding Recipes}"
                  SelectedItem="{Binding SelectedRecipe, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
