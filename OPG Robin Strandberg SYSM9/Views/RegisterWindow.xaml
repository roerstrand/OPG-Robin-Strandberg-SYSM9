<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OPG_Robin_Strandberg_SYSM9.ViewModels"
        mc:Ignorable="d"
        Title="Register"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="AntiqueWhite">

    <Window.DataContext>
        <vm:RegisterViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Create new account" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Username" Margin="0,5" />
            <TextBox x:Name="UsernameBox" Width="200" />

            <TextBlock Text="Password" Margin="0,5" />
            <PasswordBox x:Name="PasswordBox" Width="200" />

            <TextBlock Text="Select Country" Margin="0,5" />
            <ComboBox x:Name="CountryBox"
                      Width="200"
                      ItemsSource="{Binding Countries}"
                      SelectedIndex="0" />


            <Button Content="Register" Width="200" Margin="0,15,0,5"
                    Background="LightSlateGray" Foreground="White"
                    Click="Register_Click" />

            <Button Content="Back to Login" Width="200"
                    Background="Gray" Click="BackToLogin_Click" />
        </StackPanel>
    </Grid>
</Window>
