<Window x:Class="OPG_Robin_Strandberg_SYSM9.Views.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Width="1000"
        Height="1000"
        Background="{StaticResource AppBackground}">
    <Grid>

        <StackPanel>
            <TextBlock Text="CookMaster"
                       Foreground="{StaticResource PrimaryTitle}"
                       FontSize="80"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40" />

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

                <TextBlock Text="Add Recipe"
                       FontSize="20"
                       FontWeight="700"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20" />

                <TextBlock Text="Title" />
                <TextBox x:Name="titleInput" />

                <TextBlock Text="Ingredients (comma separated)" Margin="0,10,0,0" />
                <TextBox x:Name="ingredientsInput" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />

                <TextBlock Text="Category" Margin="0,10,0,0" />
                <TextBox x:Name="categoryInput" />

                <TextBlock Text="Instructions" Margin="0,10,0,0" />
                <TextBox x:Name="instructionsInput" Height="75" TextWrapping="Wrap" AcceptsReturn="True" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Save Recipe"
                            Width="120"
                            Click="SaveRecipe_Click" />
                    <Button Content="Back"
                            Width="120"
                            Click="BackToList_Click" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
